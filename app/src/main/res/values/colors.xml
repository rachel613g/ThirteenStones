<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="primaryColor">#9c27b0</color>
    <color name="primaryLightColor">#d05ce3</color>
    <color name="primaryDarkColor">#6a0080</color>
    <color name="secondaryColor">#6a1b9a</color>
    <color name="secondaryLightColor">#9c4dcc</color>
    <color name="secondaryDarkColor">#38006b</color>
    <color name="primaryTextColor">#ffffff</color>
    <color name="secondaryTextColor">#ffffff</color>

    <!-- For colored text; default is black/dark-gray (Day) or white/light-gray (Night) -->
    <color name="primaryTextColoredColor">@color/primaryDarkColor</color>
    <color name="secondaryTextColoredColor">@color/primaryColor</color>

    <!-- Matching colored background -->
    <color name="backgroundColoredColor">@color/primaryLightColor</color>

    <!--Used for Splash screen background, and elsewhere as needed-->
    <color name="defaultBackgroundColor">@android:color/background_light</color>
</resources>